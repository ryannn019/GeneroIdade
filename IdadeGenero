                document.write("menino")
        }
            if ($sexo == 'feminino'){
                document.write("menina")
    }
            else
                alert("escreva masculino ou feminino")

        }
        else 
        {
            if($sexo=="masculino"){
            document.write("homem")
            }
            if($sexo=="feminino"){
            document.write("mulher")
            }
            else
